@using MarkdownDeep
@using Musikanalyse.Services.Contracts
@model TutorialPage

@{
    ViewBag.Title = this.Model.Title;
}

@Html.Raw((new Markdown { ExtraMode = true, SafeMode = false, MarkdownInHtml = true }).Transform(@Model.Value))

@section Styles {
    <link href="/scripts/jplayer/blue.monday/jplayer.blue.monday.css" rel="stylesheet" />
}

@section Scripts {
    <script src="/scripts/jplayer/jquery.jplayer.min.js"></script>
    <script>
        $(function() {
            $("audio").audioPlayer();
        });
    </script>
}
