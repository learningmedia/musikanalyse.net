@using MarkdownDeep
@using Musikanalyse.Services.Contracts
@model TutorialPage

@{
    ViewBag.Title = this.Model.Title;
}

@Html.Raw((new Markdown { ExtraMode = true, SafeMode = false, MarkdownInHtml = true }).Transform(@Model.Value))

@section Styles {
    <link href="/scripts/audioplayer/css/audioplayer.css" rel="stylesheet" />
}

@section Scripts {
    <script src="/scripts/audioplayer/js/audioplayer.min.js"></script>
    <script>
        $(function() {
            $("audio").audioPlayer();
        });
    </script>
}
