@model Musikanalyse.Website.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@using (this.Html.BeginForm())
{
    <div class="row-fluid">
        <span class="span2">@this.Html.LabelFor(m => m.UserName)</span>
        <span class="span4">@this.Html.EditorFor(m => m.UserName)</span>
        <span class="span6">@this.Html.ValidationMessageFor(m => m.UserName)</span>
    </div>
    <div class="row-fluid">
        <span class="span2">@this.Html.LabelFor(m => m.Password)</span>
        <span class="span4">@this.Html.EditorFor(m => m.Password)</span>
        <span class="span6">@this.Html.ValidationMessageFor(m => m.Password)</span>
    </div>
    <div class="row-fluid">
        <span class="span12"><input type="submit" class="btn" value="Anmelden" /></span>
    </div>
}
